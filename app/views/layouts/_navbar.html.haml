%nav.navbar.navbar-default.navbar-fixed-top
	.containter-fluid
		.navbar-header
			%button.navbar-toggle.collapsed{ type: :button, 'data-toggle' => :collapse, 'data-target' => "#bs-example-navbar-collapse-1" }
				%span.sr-only Toggle Navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			= link_to "Wiki System", root_path, class: "navbar-brand"

		%ul.navbar-form.navbar-right
		#bs-example-navbar-collapse-1.collapse.navbar-collapse
			%ul.nav.navbar-nav

			%ul.navbar-form.navbar-right
				.input-group
					= form_tag(articles_path, :method => "get", id: "search-form") do
						= text_field_tag :search, params[:search], placeholder: "Search Articles", class: 'form-control'
						%span.input-group-btn
							= submit_tag "Search", class: 'btn btn-default'



			%ul.nav.navbar-nav.navbar-right
				- if user_signed_in?
					%li= link_to "New Article", new_article_path
					%li= link_to "Edit Profile", edit_user_registration_path
				- if !current_user 
					%li= link_to "Log In", new_user_session_path
					%li= link_to "Sign Up", new_user_registration_path
				- else 
					%li= link_to "Log Out", destroy_user_session_path, method: :delete